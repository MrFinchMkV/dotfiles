{
  "workbench.colorTheme": "Default Dark+",
  "workbench.iconTheme": "material-icon-theme",
  "redhat.telemetry.enabled": false,
  "remove-tabs-on-save.ignoreFileExtensions": [
      "*.go",
      "*.yml",
  ],
  "editor.fontFamily": "'Source Code Pro', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
  "editor.fontSize": 16,
  "editor.multiCursorModifier": "ctrlCmd",
  "telemetry.telemetryLevel": "off",
  "gitlens.heatmap.toggleMode": "window",
  "gitlens.hovers.currentLine.over": "line",
  "git.suggestSmartCommit": false,
  "gitlens.statusBar.enabled": false,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "redhat.ansible",
  "editor.formatOnPaste": true,
  "vim.foldfix": true,
  "vim.useSystemClipboard": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": [
        "<leader>",
        "o"
      ],
      "after": [
        // let  @o="o<Esc>"
        "o",
        "<esc>"
      ],
    },
    {
      "before": [
        "<leader>",
        "O"
      ],
      "after": [
        // let  @O="O<Esc>"
        "O",
        "<Esc>"
      ],
    },
  ],
  "files.trimTrailingWhitespace": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "diffEditor.renderSideBySide": true,
  "git.confirmSync": false,
  "extensions.ignoreRecommendations": true,
  "BracketHighlighter.border": "b",
  "BracketHighlighter.fontWeight": "bold",
  "editor.tabSize": 2,
  "editor.insertSpaces": false,
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "editor.wordWrap": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.suggest.preview": true,
  // "workbench.colorTheme": "GitHub Dark Dimmed",
  "editor.cursorBlinking": "phase",
  "editor.guides.bracketPairs": true,
  "security.workspace.trust.untrustedFiles": "open",
}